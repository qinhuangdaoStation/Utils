<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custome="http://schemas.android.com/apk/res-auto"
    xmlns:jkxy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="jmessage.example.com.utils.MainActivity"
    tools:showIn="@layout/activity_main">

    <!--自定义View-->
    <jmessage.example.com.utils.Topbar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        custome:leftBackground="@mipmap/ic_launcher"
        custome:leftText="Back"
        custome:leftTextColor="#ffffff"
        custome:rightBackground="@mipmap/ic_launcher"
        custome:rightText="More"
        custome:rightTextColor="#ffffff"
        custome:titleCenter="自定义标题"
        custome:titleCenterTextColor="#123412"
        custome:titleCenterTextSize="10sp">
    </jmessage.example.com.utils.Topbar>

    <jmessage.example.com.utils.MyRect
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        jkxy:rect_color="#ffacde"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:text="自定义控件的属性"
        android:textSize="20dp"
        android:background="@drawable/selecte_btn"/>
</LinearLayout>
